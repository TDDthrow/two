{
  "compilerOptions": {
    "target": "ES2020",                  // Specify ECMAScript target version
    "module": "ESNext",                  // Specify module code generation
    "lib": ["ES2020", "DOM"],           // Specify library files to be included
    "allowJs": true,                      // Allow JavaScript files to be compiled
    "checkJs": false,                     // Report errors in JavaScript files
    "jsx": "react-jsx",                  // Specify JSX code generation
    "declaration": true,                  // Generate .d.ts files
    "declarationMap": true,               // Create sourcemap files for declarations
    "sourceMap": true,                    // Create source map files
    "outDir": "./dist",                  // Redirect output structure to the directory
    "rootDir": "./src",                  // Specify the root directory of input files
    "strict": true,                       // Enable all strict type-checking options
    "noImplicitAny": true,                // Raise error on expressions with 'any' type
    "moduleResolution": "node",          // Resolve modules using Node.js style
 "allowSyntheticDefaultImports": true,
   "esModuleInterop": true,              // Enable compatibility with CommonJS modules
    "forceConsistentCasingInFileNames": true, // Ensure consistent file naming
    "skipLibCheck": true                   // Skip type checking of declaration files
  },
  "include": ["src/**/*"],               // Specify files to include
  "exclude": ["node_modules", "dist"]    // Specify files to exclude
}

